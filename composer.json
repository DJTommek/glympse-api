{
	"name": "djtommek/glympse-api",
	"description": "Unofficial PHP 7 API wrapper for making requests to glympse.com",
    "keywords": ["glympse.com", "glympse", "api"],
    "homepage": "https://github.com/DJTommek/glympse-api",
	"type": "library",
	"license": "BSD-2-Clause",
	"authors": [
		{
			"name": "Tomas Palider (DJTommek)",
			"email": "tomas@palider.cz",
			"homepage": "https://tomas.palider.cz/"
		}
	],
	"autoload": {
		"psr-4": {
			"DJTommek\\GlympseApi\\": "src/"
		}
	},
	"require": {
        "php": ">=7.3.0",
		"ext-curl": "*",
		"ext-simplexml": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9",
		"phpstan/phpstan": "^0.12.52"
	},
	"scripts": {
		"phpstan": "phpstan analyse src tests",
		"test": "phpunit tests"
